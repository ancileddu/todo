<!--h2>Log in</h2-->
<div id="myNav" class="overlay">
 <div class="overlay-content">
  <a class="closebtn bg-primary">Accedi</a>

</div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="row">
      <!-- Article main content -->
      <article class="col-xs-12 maincontent">
        <header class="page-header">
          <!--h1 class="page-title">Sign in</h1-->
        </header>
        
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
          <div class="panel panel-default">
            <div class="panel-body">
              <h3 class="thin text-center">Accedi alla tua Todo List</h3>
              <p class="text-center text-muted">Inserisci le tue credenziali, oppure 
              <%= link_to "Registrati", new_user_registration_path %> per creare un nuovo account. </p>
              <hr>
              
              <form>
                <div class="top-margin">
                  <label>Email <span class="text-danger">*</span></label>
                  <!--input type="text" class="form-control"-->
                  <%= f.email_field :email, autofocus: true, "class" => "form-control" %>
                </div>
                <div class="top-margin">
                  <label>Password <span class="text-danger">*</span></label>
                  <%= f.password_field :password, autocomplete: "off", "class" => "form-control" %>
                </div>
                <% if devise_mapping.rememberable? -%>
                <div class="top-margin">
                  <%= f.check_box :remember_me %>
                  <%= f.label :ricordami %>
                </div>
                <% end -%>

                <hr>

                <div class="row">
                  <div class="col-lg-8">
                    <b><a href="">Password dimenticata?</a></b>
                  </div>
                  <div class="col-lg-4 text-right">
                    <!--button class="btn btn-action" type="submit">Sign in</button-->
                    <%= f.submit "Log in", "class" => "btn btn-action" %>
                  </div>
                </div>
              </form>
            </div>
          </div>

        </div>
        
      </article>
      <!-- /Article -->

    </div>
<% end %>
